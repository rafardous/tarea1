<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="biblioteca" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.pap.logica.Usuario</class>
    <class>com.pap.logica.Lector</class>
    <class>com.pap.logica.Bibliotecario</class>
    <class>com.pap.logica.Prestamo</class>
    <class>com.pap.logica.Material</class>
    <class>com.pap.logica.Libro</class>
    <class>com.pap.logica.Articulo</class>

    <properties>
      <!-- Configuración de conexión -->
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/biblioteca"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="clave"/>

      <!-- Hibernate settings para creación automática -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      
      <!-- Crear tipos enum personalizados automáticamente -->
      <property name="hibernate.hbm2ddl.import_files" value=""/>
      <property name="hibernate.hbm2ddl.import_files_sql_extractor" value="org.hibernate.tool.schema.internal.script.MultiLineSqlScriptExtractor"/>
    </properties>
  </persistence-unit>
</persistence>
